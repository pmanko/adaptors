{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "host": {
      "title": "Host URL",
      "type": "string",
      "description": "The SFTP server host url or ip address",
      "format": "uri",
      "minLength": 1
    },
    "port": {
      "title": "Port",
      "type": "integer",
      "default": 21,
      "description": "The SFTP server port",
      "minLength": 1
    },
    "username": {
      "title": "Username",
      "type": "string",
      "description": "Username",
      "minLength": 1
    },
    "password": {
      "title": "Password",
      "type": "string",
      "description": "Password",
      "writeOnly": true,
      "minLength": 1
    }
  },
  "type": "object",
  "additionalProperties": true,
  "required": ["host"]
}
