{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "host": {
            "title": "Host URL",
            "type": "string",
            "description": "Postgres instance host URL",
            "format": "uri",
            "minLength": 1
        },
        "port": {
            "title": "Port",
            "type": "integer",
            "default": 5432,
            "description": "Database instance port",
            "minLength": 1
        },
        "database": {
            "title": "Database",
            "type": "string",
            "description": "The database name",
            "minLength": 1
        },
        "user": {
            "title": "User",
            "type": "string",
            "description": "The username to log in the database",
            "minLength": 1
        },
        "password": {
            "title": "Password",
            "type": "string",
            "description": "The password to log in the database",
            "writeOnly": true,
            "minLength": 1
        },
        "ssl": {
            "title": "Use SSL",
            "type": "boolean"
        },
        "allowSelfSignedCert": {
            "title": "Allow self-signed certificate",
            "type": "boolean"
        }
    },
    "type": "object",
    "additionalProperties": true,
    "required": [
        "host",
        "port",
        "database"
    ]
}