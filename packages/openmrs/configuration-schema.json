{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "instanceUrl": {
            "title": "Instance URL",
            "type": "string",
            "description": "The OpenMRS host url",
            "format": "uri",
            "minLength": 1
        },
        "username": {
            "title": "Username",
            "type": "string",
            "description": "The username to log in to OpenMRS",
            "minLength": 1
        },
        "password": {
            "title": "Password",
            "type": "string",
            "description": "The password to log in to OpenMRS",
            "writeOnly": true,
            "minLength": 1
        }
    },
    "type": "object",
    "additionalProperties": true,
    "required": [
        "instanceUrl"
    ]
}