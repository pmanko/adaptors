{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "apiUrl": {
            "title": "API URL",
            "type": "string",
            "description": "The OpenHIM API url",
            "format": "uri",
            "minLength": 1
        },
        "username": {
            "title": "Username",
            "type": "string",
            "description": "The username to log in to OpenHIM",
            "minLength": 1
        },
        "password": {
            "title": "Password",
            "type": "string",
            "description": "The password to log in to OpenHIM",
            "writeOnly": true,
            "minLength": 1
        }
    },
    "type": "object",
    "additionalProperties": true,
    "required": [
        "apiUrl"
    ]
}