{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "clientHost": {
            "title": "Client host",
            "type": "string",
            "description": "Your SMPP client host URL",
            "format": "uri",
            "minLength": 1
        },
        "systemId": {
            "title": "System ID",
            "type": "string",
            "description": "Your SMPP client name",
            "minLength": 1
        },
        "inboxId": {
            "title": "Inbox ID",
            "type": "string",
            "description": "Your SMPP client inbox ID",
            "minLength": 1
        },
        "password": {
            "title": "Password",
            "type": "string",
            "description": "Your SMPP client password",
            "writeOnly": true,
            "minLength": 1
        }
    },
    "type": "object",
    "additionalProperties": true,
    "required": [
        "clientHost",
        "systemId",
        "inboxId",
        "password"
    ]
}
