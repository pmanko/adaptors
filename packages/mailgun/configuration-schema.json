{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "domain": {
            "title": "Domain URL",
            "type": "string",
            "description": "Mailgun API domain URL",
            "format": "uri",
            "minLength": 1
        },
        "apiKey": {
            "title": "API Key",
            "type": "string",
            "description": "Mailgun API Key",
            "writeOnly": true,
            "minLength": 1
        }
    },
    "type": "object",
    "additionalProperties": true,
    "required": [
        "domain",
        "apiKey"
    ]
}